<div class="page-header">
  <h1>Please enter your resume here!</h1>
    <ul class="actions">
      <li><%= link_to fa_icon("arrow-left") + " Previous Page", user_resumes_path(current_user), class: "btn btn-danger" %></li>
    </ul>
</div>

<%= simple_form_for [current_user, @resume], :html => {:multipart => true} do |f| %>
  <p><%= f.input :user_name %></p>
  <p><%= f.input :resume_name %></p>
  <p><%= f.file_field :attachment %>
  <small>We accept only document with type: pdf only</small></p>
  <%= f.button :submit, 'Enter Resume', class: "btn-primary" %>
<% end %>
