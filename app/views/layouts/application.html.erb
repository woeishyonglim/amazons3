  <!DOCTYPE html>
  <html>
    <head>
      <title>S3</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
    </head>
    <body>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <%= link_to "Aws S3", root_path, class: "navbar-brand" %>
          </div>
          <ul class="nav navbar-nav">
            <li class="<%= "active" if current_page?("/") %>">
              <%= link_to "Home", root_path %>
            </li>
            <% unless user_signed_in? %>
              <li class="<%= "active" if current_page?("/users/sign_up") %>">
                <%= link_to "Sign up", new_user_registration_path %>
              </li>
              <li class="<%= "active" if current_page?("/users/sign_in") %>">
                <%= link_to "Sign in", new_user_session_path %>
              </li>
            <% end %>
          </ul>

          <% if user_signed_in? %>
            <ul class="nav navbar-nav">
              <li class="<%= "active" if current_page?("/users/#{current_user.id}/avatars") %>">
                <%= link_to "Avatar", user_avatars_path(current_user) %>
              </li>
              <li class="<%= "active" if current_page?("/users/#{current_user.id}/resumes") %>">
                <%= link_to "Resume", user_resumes_path(current_user) %>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="navbar-text">
                Signed in as <%= current_user.email %>
              </li>
              <li>
                <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          <% end %>
ï¿¼        </div>
      </nav>

      <div class="container">
        <% flash.each do |key, message| %>
          <div class="alert alert-<%= key %>  alert-dismissable">
            <button type="button" class="close" data-dismiss="alert">
              &times;
            </button>
            <%= message %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </body>
  </html>
