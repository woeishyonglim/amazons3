<div class="page-header">
  <h1>List of Avatar!</h1>
  <ul class="actions">
    <li><%= link_to fa_icon("plus") + " Add Avatar", new_user_avatar_path, class: "btn btn-primary" %></li>
    <li><%= link_to fa_icon("arrow-left") + " Home Page", root_path, class: "btn btn-danger" %></li>
  </ul>
</div>

<div class="container">
  <br />
  <br />
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th><span style="color:green">User Name</span></th>
          <th><span style="color:green">Avatar Name</span></th>
          <th><span style="color:green">User id</span></th>
          <th><span style="color:green">Avatar</span></th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @avatar.each do |picture| %>
          <tr>
            <td><%= picture.user_name %></td>
            <td><%= picture.pic_name %></td>
            <td><%= picture.user_id %></td>
            <td><%= link_to fa_icon("pencil") + " Show", user_avatar_path(:id => picture.id), class: "btn btn-info" %></td>
            <td><%= link_to fa_icon("trash") + " Delete", [@employee, picture], method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure that you wish to delete #{picture.pic_name}?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
